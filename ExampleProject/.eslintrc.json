{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["eslint:recommended", "plugin:mocha/recommended"],
    "plugins": ["mocha"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "mocha/no-skipped-tests": "error",
        "mocha/no-exclusive-tests": "error",
        "no-console": [
            "warn",
            { "allow": ["warn"]}
        ]
    },
    "ignorePatterns": [
        "node_modules/",
        "build/",
        "legacy/",
        "test/**/*",
        "*.test.js"
    ]
}
